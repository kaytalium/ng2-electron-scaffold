{
  "name": "ng2-electron-scaffold",
  "version": "1.0.0",
  "description": "Scaffolding Angular 2 with Electron",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run tsc:w\" \"electron .\" ",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "build": "electron-packager . --overwrite --out=src  --version-string.ProductName=\"mg2 Electron Angular app\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaytalium/ng2-electron-scaffold.git"
  },
  "keywords": [],
  "author": "Ovel Heslop",
  "license": "MIT",
  "dependencies": {
    "@angular/common": "*",
    "@angular/compiler": "*",
    "@angular/core": "*",
    "@angular/forms": "*",
    "@angular/http": "*",
    "@angular/platform-browser": "*",
    "@angular/platform-browser-dynamic": "*",
    "@angular/router": "*",
    "@angular/upgrade": "*",
    "angular-in-memory-web-api": "*",
    "core-js": "*",
    "reflect-metadata": "*",
    "rxjs": "*",
    "systemjs": "*",
    "zone.js": "*"
  },
  "devDependencies": {
    "@types/core-js": "*",
    "@types/node": "*",
    "@types/jasmine": "^2.5.43",
    "concurrently": "*",
    "typescript": "*",
    "electron": "*",
    "electron-packager": "^8.5.2"    
  }
}
